{
  "targets": {
    "lib": {

      "buildenv": "docker:devkitpro/devkitppc",

      "buildcmd": [
        "make -j${PARALLEL}"
      ]
    },

    "docs": {
      "branch": "main",

      "buildenv": "xenial-amd64",
      "builddeps": [
        "doxygen"
      ],

      "buildcmd": [
        "doxygen",
	"echo libogc.devkitpro.org > docs/html/CNAME"
      ],

      "artifacts": [{
        "source": "docs/html",
        "destination": {
          "type": "git",
          "branch": "gh-pages"
        }
      }]
    }
  }
}
